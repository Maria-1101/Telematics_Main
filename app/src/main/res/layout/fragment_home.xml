<!-- Keep your ConstraintLayout root -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment"
    android:background="@drawable/home_background">

    <!-- Header View and content remain unchanged -->
    <View
        android:id="@+id/header_view"
        android:layout_width="0dp"
        android:layout_height="57dp"
        android:layout_marginTop="53dp"
        android:background="#1AFFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="4dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/header_view"
        app:layout_constraintBottom_toBottomOf="@id/header_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/suprajit_logo_white" />

        <TextView
            android:id="@+id/supra_telet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@string/supra_telet"
            android:fontFamily="@font/roboto_bold"
            android:textAppearance="@style/header_title"
            android:gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/name_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/header_view"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/greeting_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_bold"
            android:textAppearance="@style/name"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XYZ"
            android:layout_marginStart="8dp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_bold"
            android:textAppearance="@style/name"
            android:gravity="center_vertical" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/main_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/name_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp"
        android:layout_marginBottom="16dp">
    <!-- Map Image -->
        <ImageView
            android:id="@+id/map_image"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/battery_location_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp">
        <!-- Original FrameLayout without changes -->
        <FrameLayout
            android:id="@+id/battery_container"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp">

            <!-- Foreground: Battery info layout -->
            <LinearLayout
                android:id="@+id/battery_section_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:elevation="2dp">

                <!-- Battery info row -->
                <LinearLayout
                    android:id="@+id/battery_info_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="6dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/battery_life" />

                    <TextView
                        android:id="@+id/battery_level_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="@string/battery_level_title"
                        android:textAppearance="@style/battery_level_title"
                        android:fontFamily="@font/roboto_regular" />

                    <TextView
                        android:id="@+id/battery_level_detection_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:fontFamily="@font/roboto_bold"
                        android:textColorHint="@color/progress"
                        android:hint="@string/battery_level_detection"
                        android:textAppearance="@style/battery_level_detection" />
                </LinearLayout>

                <!-- Progress bar -->
                <ProgressBar
                    android:id="@+id/battery_progress_bar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_marginTop="6dp"
                    android:progress="69"
                    android:max="100"
                    android:progressDrawable="@drawable/progress_bar_green" />

                <!-- Text labels -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/progress_start"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/progress_start"
                        android:fontFamily="@font/roboto_regular"
                        android:textAppearance="@style/progress"
                        android:gravity="start" />

                    <TextView
                        android:id="@+id/DTE_progress_textview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="progress"
                        android:textColorHint="@color/sub_white"
                        android:gravity="center"
                        android:fontFamily="@font/roboto_regular"
                        android:textAppearance="@style/progress"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/progress_end"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/progress_end"
                        android:fontFamily="@font/roboto_regular"
                        android:textAppearance="@style/progress"
                        android:gravity="end"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Background rectangle: placed LAST to appear behind -->
            <View
                android:id="@+id/battery_level_container_bg"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/home_page_rectangle"
                android:elevation="0dp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/current_location_frame"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <!-- Foreground content: placed above -->
            <LinearLayout
                android:id="@+id/battery_section_layout_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:elevation="2dp">

                <!-- Battery info row -->
                <LinearLayout
                    android:id="@+id/battery_info_layout_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="6dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/current_location" />

                    <TextView
                        android:id="@+id/battery_level_title_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="@string/Current_Location"
                        android:textAppearance="@style/battery_level_title"
                        android:fontFamily="@font/roboto_regular" />
                </LinearLayout>

                <!-- Current Location View and overlay -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Background of location -->
                    <View
                        android:id="@+id/current_location_view"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/current_location_view" />

                    <!-- Text and info overlay -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="3dp">

                        <TextView
                            android:id="@+id/parked_place_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="16dp"
                            android:fontFamily="@font/roboto_regular"
                            android:hint="@string/cubbon_park"
                            android:textColorHint="@color/sub_white"
                            android:textAppearance="@style/cubbon_park"
                            android:lineSpacingExtra="2sp"
                            android:layout_marginStart="6dp"
                            android:gravity="top" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="4dp">

                            <ImageView
                                android:id="@+id/schedule_24"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_marginStart="6dp"
                                android:src="@drawable/parked_time" />

                            <TextView
                                android:id="@+id/parked_time_textview"
                                android:layout_width="wrap_content"
                                android:layout_height="13dp"
                                android:layout_marginStart="6dp"
                                android:hint="@string/parked_status"
                                android:fontFamily="@font/roboto_regular"
                                android:textColorHint="@color/sub_white"
                                android:textAppearance="@style/parked_status"
                                android:lineSpacingExtra="1sp"
                                android:gravity="top" />
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
            <!-- Background rectangle: lowest layer -->
            <View
                android:id="@+id/location_container_bg"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/home_page_rectangle"
                android:elevation="0dp" />
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/parameter_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp">
        <!-- Background rectangle behind parameter blocks -->
        <LinearLayout
            android:id="@+id/parameter_combined_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:elevation="2dp">

            <!-- Parameter layout -->
            <LinearLayout
                android:id="@+id/main_parameter_layout"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical">

                <!-- Mileage and Speed layout-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- Mileage layout -->
                    <LinearLayout
                        android:id="@+id/mileage_layout"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/mileage_icon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/mileage" />

                        <LinearLayout
                            android:id="@+id/mileage_text_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/mileage_display_textview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="top"
                                android:hint="26 km/h"
                                android:lineSpacingExtra="1sp"
                                android:textAppearance="@style/parameter_display_style"
                                android:textColorHint="@color/sub_white"
                                android:translationY="-0.62sp" />

                            <TextView
                                android:id="@+id/mileage_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@string/mileage"
                                android:textAppearance="@style/parameter_title_display_style" />
                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/mileage_speed_divider"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/divider"
                        android:layout_gravity="top"
                        android:layout_marginTop="10dp"/>

                    <!-- Speed layout -->
                    <LinearLayout
                        android:id="@+id/speed_layout"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/speed_icon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/speed" />

                        <LinearLayout
                            android:id="@+id/speed_text_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/speed_display_textview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="top"
                                android:hint="24 km/h"
                                android:lineSpacingExtra="1sp"
                                android:textAppearance="@style/parameter_display_style"
                                android:textColorHint="@color/sub_white"
                                android:translationY="-0.62sp" />

                            <TextView
                                android:id="@+id/speed_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@string/avg_speed"
                                android:textAppearance="@style/parameter_title_display_style" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- CO2 and Distance layout-->
                <LinearLayout
                    android:id="@+id/co2_distance_layout"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- CO2 layout -->
                    <LinearLayout
                        android:id="@+id/CO2_layout"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/CO2_icon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/co2_saved" />

                        <LinearLayout
                            android:id="@+id/CO2_text_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/co2_display_textview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="top"
                                android:hint="12 g/km"
                                android:lineSpacingExtra="1sp"
                                android:textAppearance="@style/parameter_display_style"
                                android:textColorHint="@color/sub_white"
                                android:translationY="-0.62sp" />

                            <TextView
                                android:id="@+id/CO2_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@string/co2_saved"
                                android:textAppearance="@style/parameter_title_display_style" />
                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/co2_distance_divider"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/divider"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"/>

                    <!-- Speed layout -->
                    <LinearLayout
                        android:id="@+id/distance_layout"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/distance_icon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/distance" />

                        <LinearLayout
                            android:id="@+id/distance_text_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/distance_display_textiew"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="top"
                                android:hint="1300 km"
                                android:lineSpacingExtra="1sp"
                                android:textAppearance="@style/parameter_display_style"
                                android:textColorHint="@color/sub_white"
                                android:translationY="-0.62sp" />

                            <TextView
                                android:id="@+id/distance_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@string/total_distance"
                                android:textAppearance="@style/parameter_title_display_style" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Dividers -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <ImageView
                    android:id="@+id/main_divider_start"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:src="@drawable/divider"
                    android:layout_marginEnd="20dp" />

                <ImageView
                    android:id="@+id/main_divider_end"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:src="@drawable/divider"
                    android:layout_marginStart="5dp" />
            </LinearLayout>

            <!-- Toggle Buttons-->
            <LinearLayout
                android:id="@+id/toggle_button_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Parent horizontal layout containing both items -->
                <LinearLayout
                    android:id="@+id/seat_vehicle_lock_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Seat Lock -->
                    <LinearLayout
                        android:id="@+id/seat_lock_layout"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingEnd="4dp">

                        <TextView
                            android:id="@+id/seat_lock_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="@string/seat_lock"
                            android:layout_marginStart="45dp"
                            android:layout_gravity="center_vertical"
                            android:textAppearance="@style/toggle_button_title"
                            android:layout_marginEnd="8dp" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/seat_lock_toggle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="8dp"
                            android:rotation="270"
                            android:showText="false"
                            android:switchMinWidth="0dp"
                            android:switchPadding="0dp"
                            android:thumb="@drawable/switch_thumb"
                            android:track="@drawable/switch_track"
                            app:useMaterialThemeColors="false"
                            tools:ignore="SpeakableTextPresentCheck" />


                    </LinearLayout>


                    <ImageView
                        android:id="@+id/seat_vehicle_lock_divider"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/divider"
                        android:layout_gravity="top"
                        android:layout_marginTop="10dp"/>

                    <!-- Vehicle Lock -->
                    <LinearLayout
                        android:id="@+id/vehicle_lock_layout"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center" >

                    <TextView
                        android:id="@+id/vehicle_lock_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/vehicle_lock"
                        android:textAppearance="@style/toggle_button_title" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/vehicle_lock_toggle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:showText="false"
                            android:padding="8dp"
                            android:rotation="270"
                            android:switchMinWidth="0dp"
                            android:switchPadding="0dp"
                            android:thumb="@drawable/switch_thumb"
                            android:track="@drawable/switch_track"
                            app:useMaterialThemeColors="false" />
                </LinearLayout>


            </LinearLayout>

                <LinearLayout
                    android:id="@+id/handle_immobilization_lock_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Immobilization Section -->
                    <LinearLayout
                        android:id="@+id/immobilization_inner_layout"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:baselineAligned="false">

                        <ImageView
                            android:id="@+id/immobilization_icon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/immobilisation" />

                        <LinearLayout
                            android:id="@+id/immobilization_text_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/immobilization_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@string/immobilization"
                                android:layout_gravity="center"
                                android:textAppearance="@style/toggle_button_title" />

                            <TextView
                                android:id="@+id/immobilization_subscription"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@string/premium_subscription"
                                android:layout_gravity="center"
                                android:textAppearance="@style/premium_subscription" />
                        </LinearLayout>

                        <FrameLayout
                            android:id="@+id/immobilization_switch_wrapper"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical">

                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:id="@+id/immobilization_toggle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:showText="false"
                                android:thumb="@drawable/switch_thumb"
                                android:track="@drawable/switch_track"
                                app:useMaterialThemeColors="false"
                                android:enabled="false" />

                            <!-- Transparent clickable overlay -->
                            <View
                                android:id="@+id/immobilization_click_overlay"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:background="@android:color/transparent"
                                android:clickable="true"
                                android:focusable="true"
                                tools:ignore="SpeakableTextPresentCheck" />
                        </FrameLayout>



                    </LinearLayout>

                    <!-- Center Divider -->
                    <ImageView
                        android:id="@+id/handle_immobilization_divider"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/divider"
                        android:layout_gravity="center_vertical" />

                    <!-- Handle Lock Section -->
                    <LinearLayout
                        android:id="@+id/handle_lock_layout"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/handle_lock_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="@string/handle_lock"
                            android:layout_gravity="center"
                            android:textAppearance="@style/toggle_button_title" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/handle_lock_toggle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:showText="false"
                            android:switchMinWidth="0dp"
                            android:switchPadding="0dp"
                            android:thumb="@drawable/switch_thumb"
                            android:track="@drawable/switch_track"
                            app:useMaterialThemeColors="false" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/parameter_view_bg"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/home_page_rectangle" />
    </FrameLayout>
        <FrameLayout
            android:id="@+id/sos_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/sos_bg"
            android:padding="8dp">

            <LinearLayout
                android:id="@+id/sos_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/sos_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/sos_icon"
                    android:contentDescription="Icon" />

                <TextView
                    android:id="@+id/sos_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/sos_alert"
                    android:textAppearance="@style/sos_alert"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="8sp" />

                <ImageButton
                    android:id="@+id/sos_button_default"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:background="@null"
                    android:contentDescription="@string/action_button"
                    android:scaleType="fitCenter"
                    android:src="@drawable/default_sos"
                    tools:ignore="TouchTargetSizeCheck" />

                <ImageButton
                    android:id="@+id/sos_button_selected"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:background="@null"
                    android:visibility="gone"
                    android:contentDescription="Action Button"
                    android:scaleType="fitCenter"
                    android:src="@drawable/selected_sos"
                    tools:ignore="TouchTargetSizeCheck" />

            </LinearLayout>
        </FrameLayout>


    </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
